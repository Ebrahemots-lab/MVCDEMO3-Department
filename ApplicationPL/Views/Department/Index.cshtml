@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Departments";
}

<h1>All Departments</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create Department</a>
<br />
<br />

@foreach(var dept in Model)
{
    <div>
        <span style="color:red">@dept.Message</span>
    </div>
}



@if (Model.Count() > 0)
{
  <table class="table table-striped table-hover">
    <tr>
            <th>@Html.DisplayNameFor(D => D.Code)</th>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
    <th>Number Of Emps</th>
    <th>Details</th>
    <th>Update</th>
    <th>Delete</th>
    </tr>
    <tbody>
        @foreach(var dept in Model)
        {
            <tr>
                <td>@dept.Code</td>
                <td>@dept.Name</td>
                <td>@dept.DateOfCreation</td>
                    <td style="background-color:@dept.StatusColor"><h5 style="text-align:center">@dept.Employees.Count Employee</h5></td>
                 <partial name="_ButtonPartial" model="@dept.Id"/>
                </tr>
               
            }

    </tbody>
    </table>
}else
{
 
    <div style="color:red">There is no data yet.</div>
}



