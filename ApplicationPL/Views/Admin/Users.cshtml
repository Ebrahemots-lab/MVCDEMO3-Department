@model IEnumerable<UsersViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />
@if (@Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.UserName)</td>
                <td>@Html.DisplayNameFor(E => E.FirstName)</td>
                <td>@Html.DisplayNameFor(E => E.LastName)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.Role)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role.FirstOrDefault()</td>
                    <partial name="_ButtonPartial" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <div style="color:orange">
        <h2>There is No Users Yet</h2>
    </div>
}

