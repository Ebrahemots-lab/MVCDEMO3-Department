@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="@Model.Name" value="@Model.Name" class="form-control"></input>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="@Model.Age" value="@Model.Age" class="form-control"></input>
        <span asp-validation-for="@Model.Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Adress" class="form-label"></label>
        <input asp-for="@Model.Adress" value="@Model.Adress" class="form-control"></input>
        <span asp-validation-for="@Model.Adress" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="@Model.Phone" value="@Model.Phone" class="form-control"></input>
    </div>
    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="@Model.Salary" value="@Model.Salary" class="form-control"></input>
    </div>
      <div class="mb-3">
        <label asp-for="IsActive" class="form-label"></label>
        <input asp-for="@Model.IsActive" value="@Model.IsActive" class="form-control"></input>
    </div>
    <div class="mb-3">
        <label asp-for="HireDate" class="form-label"></label>
        <input asp-for="@Model.HireDate" value="@Model.HireDate" class="form-control"></input>


<br />
<input type="submit" value="Update"  class="btn btn-success"/>
<a asp-action="Index" class="btn btn-light">Back To List</a>

</form>


