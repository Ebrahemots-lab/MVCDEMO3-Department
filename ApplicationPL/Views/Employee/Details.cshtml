@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee: @Model.Name</h1>
<br />
<br />

<div>
    <legend>All Information</legend>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="@Model.Name" value="@Model.Name" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="@Model.Age" value="@Model.Age" class="form-control" disabled />
    </div>


    <div class="mb-3">
        <label asp-for="EmailAdress" class="form-label"></label>
        <input asp-for="@Model.EmailAdress" value="@Model.EmailAdress" class="form-control" disabled />
    </div>


    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="@Model.Phone" value="@Model.EmailAdress" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="@Model.Salary" value="@Model.Salary" class="form-control" disabled />
    </div>


    <div class=" form-group">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input class="form-control" asp-for="@Model.IsActive" />


    </div>
    <div class="mb-3">
        <label asp-for="HireDate" class="form-label"></label>
        <input asp-for="@Model.HireDate" value="@Model.HireDate" class="form-control" disabled />
    </div>


    
    <br />
    <a class="btn btn-warning" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>
    <a class="btn btn-light" asp-action="Index">Back To List</a>
</div>

