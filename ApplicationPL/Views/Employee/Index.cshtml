@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee Information</h1>
<br />
<a class="btn btn-primary" asp-action="Add">Add New Employee</a>
<br />
<br />
@if(@Model.Count() > 0)
{
    <table class="table">
       <thead>
        <th>@Html.DisplayNameFor(E => E.Name)</th>
        <th>@Html.DisplayNameFor(E => E.Age)</th>
        <th>@Html.DisplayNameFor(E => E.EmailAdress)</th>
        <th>@Html.DisplayNameFor(E => E.Phone)</th>
        <th>@Html.DisplayNameFor(E => E.Salary)</th>
        <th>@Html.DisplayNameFor(E => E.IsActive)</th>
        <th>@Html.DisplayNameFor(E => E.HireDate)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
       </thead>
       <tbody>
           @foreach(var emp in @Model)
            {
            <td>@emp.Name</td>
            <td>@emp.Age</td>
            <td>@emp.EmailAdress</td>
            <td>@emp.Phone</td>
            <td>@emp.Salary</td>
            <td>@Html.DisplayFor(E => emp.IsActive)</td>
            <td>@emp.HireDate</td>
            <td><a class="btn btn-success" asp-action="Details" asp-route-id="@emp.Id">Details</a></td>
            <td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@emp.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id = "@emp.Id">Delete</a></td>
            }
        </tbody>
    </table>
}else
{
    <br />
    <div style="color:orange">
        <h2>There is No Employee Yet</h2>
    </div>
}

