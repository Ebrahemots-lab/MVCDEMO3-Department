@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Header"] = "Login";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div asp-validation-summary="All"></div>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form ASP-action="Login" method="post">
            <input class="text" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="text" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox">
                    <span>Remmember Me?</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
            <a>Don't Have an Account? <a asp-action="Index">Sign Up</a></a>
        </form>
    </div>
</div>

@section ValidationSection
{
    <partial name="_ValidationScriptsPartial" />
}

