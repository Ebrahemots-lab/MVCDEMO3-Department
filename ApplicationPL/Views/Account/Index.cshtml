@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["Header"] = "Rigester Page";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div asp-validation-summary="All"></div>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form ASP-action="Register" method="post">
            <input class="text" asp-for="Fname" placeholder="First Name">
            <span asp-validation-for="Fname" class="text-danger"></span>

            <input class="text" asp-for="Lname" placeholder="Laste Name">
            <span asp-validation-for="Lname" class="text-danger"></span>

            <input class="text" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="text" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

            <input class="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
           
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
            <a>Have an Account? <a asp-action="Login">Login In</a></a>
        </form>
    </div>
</div>

@section ValidationSection
{
    <partial name="_ValidationScriptsPartial" />
}


